#include <iostream>
using namespace std;

void Rrr(int arr[],int arr2[],int size)
{
    
    int* pa;
    int temp;
    for (int i = 0; i < size; i++)
    {
        pa = &arr[i];
        temp = arr2[i];
        arr2[i] = *pa;
        arr[i] = temp;
    }


    for (int i = 0; i < 6; i++)
    {
        cout << arr[i] << " ";
        
    }
    cout << endl;
    for (int i = 0; i < 6; i++)
    {
        cout << arr2[i] << " ";

    }
}
int main()
{
    setlocale(LC_ALL, "rus");
    int arr[6] = { 0,1,2,3,4,5 };
    int arr2[6] = { 6,7,8,9,10,11 };
    int size = sizeof(arr) / sizeof(arr[0]);
    Rrr(arr,arr2,size);
    
    
}
