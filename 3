#include <iostream>
void rf(int arr[], int size)
{
	int arr2[5] = {0,0,0,0,0};
	int size2 = sizeof(arr2) / sizeof(arr2[0]);
	int* pArr = arr;
	int* pArr2 = arr2;
	pArr2 += size2 - 1;
	int a = 0;
	while (a != size)
	{
		*pArr2 = *pArr;
		pArr2--;
		pArr++;
		a++;
	}
	for (int i = 0; i < size; i++)
	{
		std::cout << arr2[i];
	}
}


int main()
{
	int arr[5] = { 1,2,3,4,5};
	int size = sizeof(arr) / sizeof(arr[0]);
	rf(arr,size);

	
}

