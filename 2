#include <iostream>
void rf(int arr[], int size)
{
	int* pArr = arr;
	int* pArr2 = arr;
	pArr2 += size - 1;
	int temp1;

	int b = size / 2;
	int a = 0;
	
	while (a != b)
	{
		
		temp1 = *pArr;
		*pArr = *pArr2;
		*pArr2 = temp1;
		pArr++;
		pArr2--;
		a++;
	}
	

	for (int i = 0; i < size; i++)
	{
		std::cout << arr[i];
	}
}


int main()
{
	int arr[6] = { 1,2,3,4,5,6 };
	int size = sizeof(arr) / sizeof(arr[0]);
	rf(arr,size);

	
}

