#include <iostream>

using namespace std;

void reverseArray(int *arr, int size) 
{
    
    if (size <= 0) 
    {
        return; 
    }
    
    int *start = arr;           
    int *end = arr + size - 1;   

    
    while (start < end) 
    {
        
        int temp = *start;      
        *start = *end;        
        *end = temp;          

        
        start++;              
        end--;                
    }
}

int main() 
{
    int arr[] = {1, 2, 3, 4, 5};
    int size = sizeof(arr) / sizeof(arr[0]);

    cout << "Исходный массив: ";
    for (int i = 0; i < size; ++i) 
    {
        std::cout << arr[i] << " ";
    }
    cout << endl;

    reverseArray(arr, size); 

    cout << "Перевернутый массив: ";
    for (int i = 0; i < size; ++i) 
    {
        cout << arr[i] << " ";
    }
    cout << endl;

    return 0;
}
